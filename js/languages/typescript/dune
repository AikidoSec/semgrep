(executables
 (names Parser)
 (libraries parser_javascript.ast_generic
  parser_javascript.menhir
  parser_typescript.tree_sitter semgrep_js_shared)
 (modes js)
 (js_of_ocaml
  (javascript_files semgrep.js)
  )
 (preprocess
  (pps js_of_ocaml-ppx)))

(rule
 (targets semgrep-typescript-parser.js semgrep-typescript-parser.wasm)
 (deps
  ../../../libs/ocaml-tree-sitter-core/downloads/tree-sitter-0.20.6/lib/src/lib.c
  ../../../languages/typescript/tree-sitter/semgrep-typescript/lib/parser.c
  ../../../languages/typescript/tree-sitter/semgrep-typescript/lib/scanner.c
  )
 (action
  (run
   emcc
   -O3
   -I../../../libs/ocaml-tree-sitter-core/downloads/tree-sitter-0.20.6/lib/src
   -I%{env:TREESITTER_INCDIR=/usr/local/include}
   %{deps}
   -o
   semgrep-typescript-parser.js
   -sALLOW_MEMORY_GROWTH=1
   -sEXPORTED_RUNTIME_METHODS=%{read:../../shared/exported-runtime-methods.txt}
   -sEXPORTED_FUNCTIONS=_tree_sitter_typescript,%{read:../../shared/exported-functions.txt}
   -sMODULARIZE
   )))

(rule
  (target entrypoint.js)
  (deps ../../shared/entrypoint.js)
  (action (copy %{deps} %{target}))
)

(rule
  (target webworker.js)
  (deps ../../shared/webworker.js)
  (action (copy %{deps} %{target}))
)

(rule
  (target semgrep-parser.js)
  (deps semgrep-typescript-parser.js)
  (action (copy %{deps} %{target}))
)

(rule
 (target semgrep-typescript.js)
 (deps entrypoint.js semgrep-parser.js Parser.bc.js)
 (action
  (run esbuild entrypoint.js --bundle --external:fs --external:constants --external:tty --external:child_process --outfile=%{target})))

(rule
 (target semgrep-typescript-webworker.js)
 (deps entrypoint.js semgrep-parser.js Parser.bc.js)
 (action
  (run esbuild webworker.js --bundle --external:fs --external:constants --external:tty --external:child_process --outfile=%{target})))
