(executables
 (names Parser)
 (libraries
    parser_csharp.ast_generic
    semgrep_js_shared
 )
 (modes js)
  (js_of_ocaml
  (javascript_files semgrep.js)
  )
 (preprocess
  (pps js_of_ocaml-ppx))
)

(rule
 (targets semgrep-csharp-parser.js semgrep-csharp-parser.wasm)
 (deps
  ../../../libs/ocaml-tree-sitter-core/downloads/tree-sitter-0.20.6/lib/src/lib.c
  ../../../languages/csharp/tree-sitter/semgrep-c-sharp/lib/parser.c
  ../../../languages/csharp/tree-sitter/semgrep-c-sharp/lib/scanner.c)
 (action
  (run
   emcc
   -O3
   -I../../../libs/ocaml-tree-sitter-core/downloads/tree-sitter-0.20.6/lib/src
   -I%{env:TREESITTER_INCDIR=/usr/local/include}
   %{deps}
   -o
   semgrep-csharp-parser.js
   -sALLOW_MEMORY_GROWTH=1
   -sEXPORTED_RUNTIME_METHODS=%{read:../../shared/exported-runtime-methods.txt}
   -sEXPORTED_FUNCTIONS=_tree_sitter_c_sharp,%{read:../../shared/exported-functions.txt}
   -sMODULARIZE
   )))

(rule
  (target entrypoint.js)
  (deps ../../shared/entrypoint.js)
  (action (copy %{deps} %{target}))
)

(rule
  (target semgrep-parser.js)
  (deps semgrep-csharp-parser.js)
  (action (copy %{deps} %{target}))
)

(rule
 (target semgrep-csharp.js)
 (deps entrypoint.js semgrep-parser.js Parser.bc.js)
 (action
  (run esbuild entrypoint.js --bundle --platform=node --outfile=%{target})))
